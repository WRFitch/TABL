<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CheckoutActivity">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="34dp"
        android:layout_height="33dp"
        android:background="@color/white"
        app:srcCompat="@drawable/black_close_exit_button"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:text="Ongoing Order"
        android:textColor="@color/lightThemePrimary"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/order_accepted_confetti"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:text="Order Details:"
        android:textColor="@color/lightThemePrimary"
        android:textSize="23sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="346dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:text="Total:"
        android:textColor="@color/lightThemePrimary"
        android:textSize="23sp"
        tools:layout_editor_absoluteX="269dp"
        tools:layout_editor_absoluteY="562dp" />


    <Button
        android:id="@+id/CancelOrderButton"
        android:layout_width="442dp"
        android:layout_height="70dp"
        android:background="@drawable/border_top_bottom"
        android:text="Cancel Order"
        android:textColor="@color/lightThemeAccent"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="-6dp"
        tools:layout_editor_absoluteY="600dp" />

    <Button
        android:id="@+id/HelpWithOrderButton"
        android:layout_width="442dp"
        android:layout_height="70dp"
        android:background="@drawable/border_top_bottom"
        android:text="Help With Order"
        android:textColor="@color/lightThemePrimary"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="-6dp"
        tools:layout_editor_absoluteY="665dp" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="395dp"
        android:layout_height="177dp"
        android:scrollbars="vertical"
        tools:itemCount="9"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="384dp"
        tools:listitem="@layout/recycler_view_item" />



</android.support.constraint.ConstraintLayout>